# AutoTestLab - Environment Variables Configuration
# Copy this file to .env in the root directory and update with your values

# ============================================
# GitHub Configuration
# ============================================

# GitHub Personal Access Token (for PR comments)
# Create at: https://github.com/settings/tokens
# Scopes needed: repo, admin:repo_hook
GITHUB_TOKEN=your_github_pat_here

# GitHub repository in format owner/repo
GITHUB_REPOSITORY=your-username/AutoTestLab

# ============================================
# Jenkins Configuration
# ============================================

# Jenkins URL (used for report links)
JENKINS_URL=http://localhost:8080

# Jenkins build number (set automatically during pipeline)
BUILD_NUMBER=1

# Jenkins build URL (set automatically during pipeline)
BUILD_URL=http://localhost:8080/job/AutoTestLab-Pipeline/1/

# ============================================
# Selenium Grid Configuration
# ============================================

# Selenium Hub URL
SELENIUM_HUB_URL=http://selenium-hub:4444

# Enable Selenium Grid (true/false)
USE_GRID=true

# Selenium Grid timeout settings (seconds)
GRID_TIMEOUT=300
GRID_BROWSER_TIMEOUT=300

# ============================================
# Test Configuration
# ============================================

# Python output buffering
PYTHONUNBUFFERED=1

# Base URL for API tests
API_BASE_URL=https://jsonplaceholder.typicode.com/

# Base URL for UI tests
UI_BASE_URL=https://www.saucedemo.com/

# Test report format
REPORT_FORMAT=html

# ============================================
# Docker Configuration
# ============================================

# Docker network name
DOCKER_NETWORK=jenkins-test-network

# Docker image tags
JENKINS_IMAGE=jenkins/jenkins:lts
SELENIUM_HUB_IMAGE=selenium/hub:4.15.0
CHROME_NODE_IMAGE=selenium/node-chrome:4.15.0

# ============================================
# Advanced Configuration
# ============================================

# Jenkins Java options
JENKINS_JAVA_OPTS=-Xmx2g -Xms1g

# Selenium shared memory size
SELENIUM_SHM_SIZE=2gb

# Chrome node max sessions
CHROME_MAX_SESSIONS=5

# Browser window resolution
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# ============================================
# Logging Configuration
# ============================================

# Log level
LOG_LEVEL=INFO

# Enable detailed test output
VERBOSE=true

# ============================================
# Notification Configuration
# ============================================

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# Notes
# ============================================
# - Never commit actual credentials to version control
# - Use GitHub Secrets for production
# - Keep .env file in .gitignore
# - Use strong, unique passwords
# - Rotate tokens regularly
